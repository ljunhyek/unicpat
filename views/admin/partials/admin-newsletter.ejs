<h2 class="text-xl font-bold mb-4">뉴스레터 관리</h2>

<!-- 추가 폼 -->
<form action="/admin/add" method="POST" class="bg-gray-50 p-4 rounded-lg mb-6 space-y-3">
    <input type="hidden" name="type" value="newsletter">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">제목 *</label>
            <input type="text" name="title" required
                   class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                   placeholder="뉴스레터 제목">
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">URL *</label>
            <input type="url" name="url" required
                   class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                   placeholder="https://stibee.com/...">
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">발행일 *</label>
            <input type="text" name="date" required
                   class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                   placeholder="2026.01.15">
        </div>
    </div>
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg text-sm transition-colors">
        <i class="fas fa-plus mr-1"></i>뉴스레터 추가
    </button>
</form>

<!-- 목록 -->
<div class="overflow-x-auto">
    <table class="w-full text-sm text-left">
        <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
            <tr>
                <th class="px-4 py-3">제목</th>
                <th class="px-4 py-3">발행일</th>
                <th class="px-4 py-3 text-center">삭제</th>
            </tr>
        </thead>
        <tbody class="divide-y">
            <% if (newsletters && newsletters.length > 0) { %>
                <% newsletters.forEach(nl => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">
                            <a href="<%= nl.link %>" target="_blank" class="text-blue-600 hover:underline"><%= nl.title %></a>
                        </td>
                        <td class="px-4 py-3 text-gray-500"><%= nl.date %></td>
                        <td class="px-4 py-3 text-center">
                            <form action="/admin/delete" method="POST" class="inline"
                                  onsubmit="return confirm('정말 삭제하시겠습니까?')">
                                <input type="hidden" name="type" value="newsletter">
                                <input type="hidden" name="id" value="<%= nl.id %>">
                                <button type="submit" class="text-red-500 hover:text-red-700">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr><td colspan="3" class="px-4 py-6 text-center text-gray-400">등록된 뉴스레터가 없습니다.</td></tr>
            <% } %>
        </tbody>
    </table>
</div>
