<h2 class="text-xl font-bold mb-4">정부지원사업 관리</h2>

<!-- 지원사업 종류 섹션 -->
<div class="mb-8">
    <h3 class="text-lg font-semibold mb-3 text-gray-700">
        <i class="fas fa-list-ul mr-1"></i>지원사업 종류
    </h3>
    <form action="/admin/add" method="POST" class="bg-gray-50 p-4 rounded-lg mb-4 space-y-3">
        <input type="hidden" name="type" value="programType">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">기관명 *</label>
                <input type="text" name="agency" required
                       class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="창업진흥원">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">프로그램명 *</label>
                <input type="text" name="programs" required
                       class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="예비창업패키지, 초기창업패키지">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">설명 *</label>
                <input type="text" name="description" required
                       class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="창업 관련 지원 사업">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">URL *</label>
                <input type="url" name="url" required
                       class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="https://www.k-startup.go.kr">
            </div>
        </div>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg text-sm transition-colors">
            <i class="fas fa-plus mr-1"></i>지원사업 종류 추가
        </button>
    </form>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
                <tr>
                    <th class="px-4 py-3">기관명</th>
                    <th class="px-4 py-3">프로그램</th>
                    <th class="px-4 py-3">설명</th>
                    <th class="px-4 py-3 text-center">삭제</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                <% if (programTypes && programTypes.length > 0) { %>
                    <% programTypes.forEach(pt => { %>
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 py-3 font-medium">
                                <a href="<%= pt.url %>" target="_blank" class="text-blue-600 hover:underline"><%= pt.agency %></a>
                            </td>
                            <td class="px-4 py-3 text-gray-600"><%= pt.programs %></td>
                            <td class="px-4 py-3 text-gray-500"><%= pt.description %></td>
                            <td class="px-4 py-3 text-center">
                                <form action="/admin/delete" method="POST" class="inline"
                                      onsubmit="return confirm('정말 삭제하시겠습니까?')">
                                    <input type="hidden" name="type" value="programType">
                                    <input type="hidden" name="id" value="<%= pt.id %>">
                                    <button type="submit" class="text-red-500 hover:text-red-700">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="4" class="px-4 py-6 text-center text-gray-400">등록된 지원사업 종류가 없습니다.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- 사업 공고 섹션 -->
<div>
    <h3 class="text-lg font-semibold mb-3 text-gray-700">
        <i class="fas fa-bullhorn mr-1"></i>사업 공고
    </h3>
    <form action="/admin/add" method="POST" class="bg-gray-50 p-4 rounded-lg mb-4 space-y-3">
        <input type="hidden" name="type" value="govProject">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">공고명 *</label>
                <input type="text" name="title" required
                       class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="2026년 초기 창업패키지">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">접수기간 *</label>
                <input type="text" name="period" required
                       class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="2026.3.1 ~ 2026.3.31">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">URL *</label>
                <input type="url" name="url" required
                       class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="https://www.bizinfo.go.kr/...">
            </div>
        </div>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg text-sm transition-colors">
            <i class="fas fa-plus mr-1"></i>사업 공고 추가
        </button>
    </form>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
                <tr>
                    <th class="px-4 py-3">공고명</th>
                    <th class="px-4 py-3">접수기간</th>
                    <th class="px-4 py-3 text-center">삭제</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                <% if (govProjects && govProjects.length > 0) { %>
                    <% govProjects.forEach(proj => { %>
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 py-3">
                                <a href="<%= proj.url %>" target="_blank" class="text-blue-600 hover:underline"><%= proj.title %></a>
                            </td>
                            <td class="px-4 py-3 text-gray-500"><%= proj.period %></td>
                            <td class="px-4 py-3 text-center">
                                <form action="/admin/delete" method="POST" class="inline"
                                      onsubmit="return confirm('정말 삭제하시겠습니까?')">
                                    <input type="hidden" name="type" value="govProject">
                                    <input type="hidden" name="id" value="<%= proj.id %>">
                                    <button type="submit" class="text-red-500 hover:text-red-700">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="3" class="px-4 py-6 text-center text-gray-400">등록된 사업 공고가 없습니다.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
