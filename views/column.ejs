<%- include('partials/header') %>

<style>
    .hero-section {
        background: linear-gradient(135deg, #e9eff1 0%, #d8e1e6 100%);
        margin-top: -80px;
        padding: 120px 0 80px 0;
    }
    
    .new-blog-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid #e5e7eb;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        height: 250px;
    }
    .new-blog-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.08);
    }
    .card-header {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        border-bottom: 1px solid #eee;
        padding-bottom: 1rem;
    }
    .card-logo {
        height: 24px;
        margin-right: 8px;
    }
    .card-brand-name {
        font-size: 0.875rem;
        font-weight: 500;
        color: #6b7280;
    }
    .card-content {
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
    .card-title {
        color: #1f2937;
        font-weight: 600;
        font-size: 1.125rem;
        line-height: 1.6;
        display: -webkit-box;
        /* ▼▼▼ [수정 1] 2줄에서 3줄로 변경 ▼▼▼ */
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    /* ▼▼▼ [추가] 카테고리 제목 스타일 추가 ▼▼▼ */
    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 1.5rem;
        font-weight: 700;
        color: #0F172A;
    }
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        width: 60px;
        height: 3px;
        background: #54B435;
        transform: translateX(-50%);
    }
    /* ▲▲▲ 여기까지 ▲▲▲ */

    .btn-more {
        display: inline-block;
        background-color: #fff;
        color: #54B435;
        border: 2px solid #54B435;
        padding: 0.75rem 2rem;
        border-radius: 6px;
        font-weight: 600;
        transition: all 0.3s;
    }
    .btn-more:hover {
        background-color: #54B435;
        color: #fff;
    }
</style>

<section class="hero-section">
    <div class="container mx-auto text-center">
        <!-- ▼▼▼ [수정 2] Hero 제목에 section-title 스타일 적용 ▼▼▼ -->
        <h1 class="section-title text-4xl md:text-5xl font-bold mb-8 text-[#0F172A]">유니크 칼럼</h1>
        <p class="text-xl max-w-3xl mx-auto text-[#2F3B40]">
            지식재산권에 관한 전문적이고 실용적인 정보를 제공합니다.<br>
            특허, 상표, 디자인부터 AI 특허, 해외 출원까지 다양한 주제를 다룹니다.
        </p>
    </div>
</section>

<% 
const categories = [
    { 
        id: 'strategy', 
        title: '지식재산 전략', 
        bgColor: '#f9fafb',
        blogLink: 'https://blog.naver.com/unicpat' 
    },
    { 
        id: 'patent', 
        title: '특허 출원', 
        bgColor: '#EDFBE2',
        blogLink: 'https://blog.naver.com/PostList.naver?blogId=unicpat&categoryNo=1'
    },
    { 
        id: 'trademark', 
        title: '상표/디자인 출원', 
        bgColor: '#f9fafb',
        blogLink: 'https://blog.naver.com/PostList.naver?blogId=unicpat&categoryNo=1'
    }
];
const postsToShow = 8;
%>

<!-- EJS 반복문을 사용하여 각 카테고리 섹션을 동적으로 생성합니다. -->
<% categories.forEach(category => { %>
<section class="py-20" style="background-color: <%= category.bgColor %>;">
    <div class="container mx-auto text-center"> <!-- 가운데 정렬을 위해 text-center 추가 -->
        <!-- ▼▼▼ [수정 3] 카테고리 제목에 section-title 스타일 적용 ▼▼▼ -->
        <h2 class="section-title text-3xl font-bold mb-12"><%= category.title %></h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <% 
            const filteredPosts = posts.filter(p => p.category === category.id).slice(0, postsToShow);

            if (filteredPosts.length > 0) {
                filteredPosts.forEach(post => { %>
                <a href="<%= post.url %>" target="_blank" class="block">
                    <div class="new-blog-card">
                        <div class="card-header">
                            <img src="/images/unique-mark.png" alt="유니크 마크" class="card-logo">
                            <span class="card-brand-name">유니크 특허</span>
                        </div>
                        <div class="card-content">
                            <h3 class="card-title"><%= post.title %></h3>
                        </div>
                    </div>
                </a>
                <% });
            } else {
            %>
                <p class="col-span-full text-gray-500">해당 카테고리의 게시물이 없습니다. 관리자 페이지에서 추가해주세요.</p>
            <% } %>
        </div>
        <div class="text-center mt-12">
            <a href="<%= category.blogLink %>" target="_blank" class="btn-more">블로그에서 더 보기</a>
        </div>
    </div>
</section>
<% }); %>

<%- include('partials/footer') %>