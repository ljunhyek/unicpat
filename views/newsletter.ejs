<%- include('partials/header') %>

<style>
    .page-header {
        padding-top: 120px;
        padding-bottom: 80px;
        margin-top: -80px;
        background-color: #EDFBE2;
    }
    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 1.5rem;
        font-weight: 700;
        color: #0F172A;
    }
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        width: 60px;
        height: 3px;
        background: #54B435;
        transform: translateX(-50%);
    }
    .btn-primary {
        background: #54B435;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 5px;
        font-weight: 500;
        transition: background 0.3s;
    }
    .btn-primary:hover {
        background: #469b2d;
    }
    .newsletter-card {
        display: block;
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s, box-shadow 0.3s;
        border-left: 4px solid #54B435;
    }
    .newsletter-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(84, 180, 53, 0.1);
    }
</style>

<!-- 뉴스레터 소개 및 구독신청 섹션 -->
<section class="page-header">
    <div class="container mx-auto text-center">
        <h1 class="section-title text-4xl font-bold">유니크 뉴스레터</h1>
        <p class="text-lg text-[#2F3B40] max-w-3xl mx-auto my-8 leading-relaxed">
            사업에 도움이 되는 특허, 상표, 정부지원사업 등 최신 IP 트렌드와 실무 팁을 가장 먼저 받아보세요.<br>
            유니크 특허사무소의 전문가들이 엄선한 핵심 정보만을 담아 보내드립니다.
        </p>
        <!-- 구독 신청 페이지 링크를 절대 경로로 수정 -->
        <a href="/subscribe" class="btn-primary text-lg px-8 py-3 inline-block">뉴스레터 구독 신청</a>
    </div>
</section>

<!-- 지난 뉴스레터 보기 섹션 -->
<section class="py-16 bg-white">
    <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 text-[#0F172A]">지난 뉴스레터 보기</h2>
        
        <div class="max-w-4xl mx-auto space-y-6">
            <% if (newsletters && newsletters.length > 0) { %>
                <% newsletters.forEach(item => { %>
                    <a href="<%= item.link %>" target="_blank" rel="noopener noreferrer" class="newsletter-card">
                        <div class="flex flex-col sm:flex-row justify-between sm:items-center">
                            <h3 class="text-xl font-bold text-[#0F172A] mb-2 sm:mb-0"><%= item.title %></h3>
                            <span class="text-gray-500 text-sm flex-shrink-0">발행일: <%= item.date %></span>
                        </div>
                    </a>
                <% }) %>
            <% } else { %>
                <p class="text-center text-gray-500">등록된 뉴스레터가 없습니다. 관리자 페이지에서 추가해주세요.</p>
            <% } %>
        </div>
    </div>
</section>

<%- include('partials/footer') %>