<%- include('partials/header') %>

<style>
    .hero {
        position: relative;
        padding: 8rem 0 4rem 0;
        background: linear-gradient(135deg, #e9eff1 0%, #d8e1e6 100%);
        margin-top: -80px; /* 헤더의 pt-[80px] 상쇄 */
        overflow: hidden;
    }
    .hero-content {
        position: relative;
        z-index: 10;
        text-align: center;
    }
    .hero-content h1 { color: #0F172A; }
    .hero-content p { color: #2F3B40; }
    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 1.5rem;
        font-weight: 700;
        color: #0F172A;
    }
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        width: 60px;
        height: 3px;
        background: #54B435;
        transform: translateX(-50%);
    }
    .info-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s, box-shadow 0.3s;
        border: 1px solid #e5e7eb;
        height: 100%;
    }
    .info-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(84, 180, 53, 0.15);
    }
    .info-icon {
        width: 60px;
        height: 60px;
        background: #f0fdf4;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }
    .info-icon i {
        font-size: 24px;
        color: #54B435;
    }
    .process-step {
        background: white;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        position: relative;
        border-left: 4px solid #54B435;
    }
    .process-number {
        width: 40px;
        height: 40px;
        background: #54B435;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        position: absolute;
        left: -22px;
        top: 20px;
    }
    .cost-table {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }
    .cost-table th {
        background: #54B435;
        color: white;
        padding: 1rem;
        text-align: center;
        font-weight: 600;
    }
    .cost-table td {
        padding: 1rem;
        border-bottom: 1px solid #e5e7eb;
        text-align: center;
    }
    .cost-table tr:last-child td { border-bottom: none; }
    .btn-primary {
        background: #54B435;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 5px;
        font-weight: 500;
        transition: background 0.3s;
        display: inline-block;
        text-decoration: none;
    }
    .btn-primary:hover { background: #469b2d; }
    .btn-outline {
        border: 2px solid #54B435;
        color: #54B435;
        padding: 0.75rem 1.5rem;
        border-radius: 5px;
        font-weight: 500;
        transition: background 0.3s, color 0.3s;
        display: inline-block;
        text-decoration: none;
    }
    .btn-outline:hover { background: #54B435; color: white; }
    .highlight-box {
        background: #EDFBE2;
        border-left: 4px solid #54B435;
        padding: 1.5rem;
        border-radius: 8px;
        margin: 2rem 0;
    }
    .case-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid #e5e7eb;
        display: flex;
        flex-direction: column;
        height: 100%;
    }
    .case-header {
        background: linear-gradient(135deg, #54B435 0%, #16a34a 100%);
        color: white;
        padding: 1rem;
    }
</style>

<!-- 히어로 섹션 -->
<section class="hero flex items-center justify-center">
