<%- include('partials/header') %>

<style>
    .page-hero {
        background: linear-gradient(135deg, #54B435 0%, #16a34a 100%);
        color: white;
        margin-top: -80px; /* 헤더의 pt-80px를 상쇄 */
        padding: 8rem 0 4rem 0; /* 헤더 높이만큼 안쪽 패딩 추가 */
    }
    
    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 1.5rem;
        font-weight: 700;
        color: #0F172A;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        width: 60px;
        height: 3px;
        background: #54B435;
        transform: translateX(-50%);
    }
    
    .strength-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s, box-shadow 0.3s;
        border: 1px solid #e5e7eb;
        height: 100%;
    }
    
    .strength-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(84, 180, 53, 0.1);
    }
    
    .strength-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #54B435 0%, #16a34a 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }
    
    .strength-icon i {
        font-size: 32px;
        color: white;
    }
    
    .ceo-card {
        background: white;
        border-radius: 16px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border: 1px solid #e5e7eb;
    }
    
    .member-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s;
        text-align: center;
        height: 100%;
    }
    
    .member-card:hover {
        transform: translateY(-5px);
    }
    
    .member-avatar {
        width: 80px;
        height: 80px;
        background: #f0fdf4;
        border-radius: 50%;
        margin: 0 auto 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid #54B435;
    }
    
    .member-avatar i {
        font-size: 32px;
        color: #54B435;
    }
    
    .btn-primary {
        background: #54B435;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: background 0.3s;
        text-decoration: none;
        display: inline-block;
    }
    
    .btn-primary:hover {
        background: #469b2d;
        color: white;
    }
    
    .ceo-image {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #54B435;
        margin: 0 auto 2rem;
    }
    
    .comparison-section {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        margin: 2rem 0;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }
    
    .vs-badge {
        background: #54B435;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }
</style>

