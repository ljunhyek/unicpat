<!-- 유니크 칼럼 섹션 -->
<section id="column" class="py-16 bg-white">
    <div class="container mx-auto">
        <h2 class="section-title text-3xl font-bold text-center">유니크 칼럼</h2>
        <p class="text-center text-[#2F3B40] mb-12">지식재산권에 관한 유용한 정보를 제공합니다</p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% posts.forEach(post => { %>
                <!-- ▼▼▼ [핵심 수정 2] 카드 HTML 구조를 새로운 디자인으로 변경합니다. ▼▼▼ -->
                <a href="<%= post.url %>" target="_blank" rel="noopener noreferrer" class="block">
                    <div class="new-blog-card">
                        <!-- 카드 헤더: 로고와 브랜드명 -->
                        <div class="card-header">
                            <img src="/images/unique-mark.png" alt="유니크 마크" class="card-logo">
                            <span class="card-brand-name">유니크 특허</span>
                        </div>
                        <!-- 카드 컨텐츠: 중앙에 제목 표시 -->
                        <div class="card-content">
                            <h3 class="card-title"><%= post.title %></h3>
                        </div>
                    </div>
                </a>
                <!-- ▲▲▲ 여기까지 ▲▲▲ -->
            <% }); %>
        </div>
        
        <div class="mt-12 text-center">
            <a href="/column" class="btn-outline">칼럼 더 보기</a>
        </div>
    </div>
</section>

